<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.apache.roller.pojos.WeblogCategoryData"
        table="weblogcategory"
        lazy="false"
    >
        <cache usage="read-write" />

        <id
            name="id"
            column="id"
            type="java.lang.String"
            unsaved-value="null"
        >
            <generator class="uuid.hex">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-WeblogCategoryData.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
            unique="false"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
            unique="false"
        />

        <property
            name="image"
            type="java.lang.String"
            update="true"
            insert="true"
            column="image"
            unique="false"
        />

        <many-to-one
            name="website"
            class="org.apache.roller.pojos.WebsiteData"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="websiteid"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-WeblogCategoryData.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
